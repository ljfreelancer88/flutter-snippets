return BoxDecoration(
  color: Colors.blue,
  borderRadius: BorderRadius.circular(10.0),
  boxShadow: [
    BoxShadow(
      color: const Color(0x33000000),
      offset: const Offset(0.0, 4.0),
      blurRadius: 10.0,
      spreadRadius: 3.0,
    ),
  ],
);
            
